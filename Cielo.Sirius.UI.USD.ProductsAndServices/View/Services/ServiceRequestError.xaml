<base:ViewBaseControl x:Class="Cielo.Sirius.UI.USD.ProductsAndServices.View.ServiceRequestError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:base="clr-namespace:Cielo.Sirius.Foundation.USD;assembly=Cielo.Sirius.Foundation.USD"
             Style="{DynamicResource ViewBaseControlStyle}"
             Width="565">
    <StackPanel>
        <Label Content="{Binding Message}" Style="{DynamicResource ErrorLabelText}"/>
        <TextBlock Text="{Binding MessageDetail}" Style="{DynamicResource DetailText}" />
    </StackPanel>
</base:ViewBaseControl>